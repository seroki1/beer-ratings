@model BeerRatings.ViewModel.RatingViewModel

@{
    ViewData["Title"] = "New Rating";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Rating</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayFor(x=>x.BeerName)
                <br/>
                @Html.HiddenFor(x=>x.BeerId)
                @Html.DisplayFor(x=>x.BreweryName)
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Add Rating" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
